generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  statuses  Statuses[]
}

model Statuses {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  boardId   String
  board     Board?   @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards     Cards[]

  @@unique([boardId, name])
}

model Cards {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String
  order       Int
  statusId    String
  status      Statuses? @relation(fields: [statusId], references: [id], onDelete: Cascade)
}
